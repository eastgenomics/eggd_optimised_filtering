{
    "name": "eggd_optimised_filtering",
    "title": "Optimised_filtering",
    "summary": "Adds extra filtering of variants based on AF",
    "dxapi": "1.0.0",
    "version": "1.0.0",
    "inputSpec": [
        {
        "name": "input_vcf",
        "label": "input annotated VCF",
        "class": "file",
        "optional": false,
        "patterns": [ "*.vcf", "*.vcf.gz"]
        },
        {
        "name": "config",
        "label": "JSON formatted config file",
        "class": "file",
        "optional": false,
        "patterns": ["*.json"]
        },
        {
        "name": "panel_string",
        "label": "panels being tested, comma separated",
        "class": "string",
        "optional": false
        },
        {
        "name": "genepanels",
        "label": "genepanels with panel IDs",
        "class": "file",
        "optional": false,
        "patterns": ["*.tsv"],
        "suggestions": [
            {
            "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
            "path": "/dynamic_files/gene_panels/"
            }
        ]
        },
        {
        "name": "panel_dump",
        "label": "dump of PanelApp in JSON format",
        "class": "file",
        "patterns": ["*.json"],
        "optional": false
        },
        {
        "name": "zygosity",
        "label": "Perform zygosity filtering",
        "class": "boolean",
        "optional": false,
        "default": false
        }
    ],
    "outputSpec": [
        {
        "name": "result_files",
        "label": "sample vcfs, with extra flags added",
        "class": "array:file"
        }
    ],
    "runSpec": {
        "distribution": "Ubuntu",
        "release": "20.04",
        "version": "0",
        "interpreter": "bash",
        "file": "src/code.sh",
        "timeoutPolicy": {
        "*": {
            "hours": 3
        }
        },
        "assetDepends": [
        {
            "name": "htslib",
            "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
            "folder": "/app_assets/htslib/htslib_v1.15.0",
            "version": "1.15.0"
        },
        {
            "name": "python_packages",
            "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
            "folder": "/app_assets/python_packages/python_packages_v1.1.0",
            "version": "1.1.0"
        }
        ]
    },
    "developers":[
        "org-emee_1"
    ],
    "authorizedUsers": [
        "org-emee_1"
    ],
    "access": {
        "allProjects": "VIEW",
        "project": "CONTRIBUTE",
        "network": [
        "*"
        ]
    },
    "regionalOptions": {
        "aws:eu-central-1": {
        "systemRequirements": {
            "*": {
            "instanceType": "mem1_ssd1_v2_x2"
            }
        }
        }
    }
